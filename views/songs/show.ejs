<h1 class="center">Song's information</h1>

<table class="table">
  <tr>
    <th>Song Name</th>
    <td>
      <%= song.name%>
    </td>
  </tr>
  <tr>
    <th>Artist</th>
    <td>
      <%= song.artist%>
    </td>
  </tr>
  <tr>
    <th>Rating</th>
    <td>
      <%= song.rating%>
    </td>
  </tr>
  <tr>
    <th>Duration</th>
    <td>
      <%= song.duration%>
    </td>
  </tr>
  <tr>
    <th>Updated By</th>
    <td><%= song.updatedBy ? song.updatedBy.fullName : 'N/A' %></td>
  </tr>
  <tr>
    <th>Created At</th>
    <td><%= song.createdAt ? song.createdAt.toLocaleString() : 'N/A' %></td>
  </tr>
  <tr>
    <th>Last Updated At</th>
    <td><%= song.updatedAt ? song.updatedAt.toLocaleString() : 'N/A' %></td>
  </tr>
</table>
<div>
  <a class="button" href="/songs">View all songs</a>
</div>
<div>
  <a class="button" href="<%=`/songs/${song._id}/edit`%>">
    Edit Songs Details
  </a>
</div>
<div>
  <a class="button" href="<%= `/songs/${song._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
</div>
