<div class="data-form">
    <form class="form-signin" action="<%=`/subscribers/${subscriber._id}/update?_method=PUT`%>" method="POST">
      <h2 class="form-signin-heading">Edit subscriber:</h2>
      <label for="inputFirstName">First Name</label>
      <input class="form-control" type="text" name="first" id="inputFirstName" value="<%= subscriber.name.first %>" placeholder="First" autofocus>
      <label for="inputLastName">Last Name</label>
      <input class="form-control" type="text" name="last" id="inputLastName" value="<%= subscriber.name.last %>" placeholder="Last">      <label for="inputEmail">Email address</label>
      <input type="email" name="email" id="inputEmail" class="form-control" value="<%= subscriber.email %>" placeholder="Email address" required>
      <br />
      <button class="btn btn-lg btn-primary btn-block" type="submit">Save</button>
    </form>
</div>